# Text-to-SQL MVP Environment Configuration
# Copy to .env and fill in your values

# =============================================================================
# GOOGLE AI CONFIGURATION
# =============================================================================

# Google API Key for Gemini (required)
GOOGLE_API_KEY=your-google-api-key-here

# Gemini Model Configuration
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_TEMPERATURE=0.0
GEMINI_MAX_OUTPUT_TOKENS=4096
GEMINI_TOP_P=0.95
GEMINI_TOP_K=40

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database mode: "duckdb" for local testing, "bigquery" for production
DATABASE_MODE=duckdb

# BigQuery Configuration (only needed if DATABASE_MODE=bigquery)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
BIGQUERY_PROJECT=your-gcp-project-id
BIGQUERY_DATASET=text2sql_finance
BIGQUERY_LOCATION=US

# DuckDB Configuration (for local testing)
DUCKDB_PATH=:memory:

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# API Rate Limiting
MAX_RETRIES=3
RETRY_DELAY=1.0
REQUEST_TIMEOUT=60

# Query Execution
QUERY_TIMEOUT=30
MAX_ROWS_RETURNED=1000
DRY_RUN_DEFAULT=false

# =============================================================================
# EXPERIMENTATION CONFIGURATION
# =============================================================================

# Default domain for testing
DEFAULT_DOMAIN=finance

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Cache
ENABLE_CACHE=true
CACHE_TTL=3600
